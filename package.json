{
  "name": "bulma-ui",
  "version": "0.14.0",
  "description": "Bulma components for React",
  "main": "dist/bulma-ui.js",
  "umd:main": "dist/bulma-ui.umd.js",
  "browser": "dist/bulma-ui.umd.js",
  "module": "dist/bulma-ui.m.js",
  "source": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prelint": "prettier --write \"src/**/*.js\"",
    "lint": "xo --fix",
    "test": "npm run lint && npm run spec",
    "spec": "jest",
    "spec:watch": "npm run spec -- --watch",
    "coverage": "npm run spec -- --coverage",
    "coverage:html": "npm run coverage && http-server ./coverage/lcov-report -o",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "clean": "rimraf dist",
    "build": "rollup -c",
    "precommit": "npm test && npm run lint",
    "prepublish": "npm run clean && npm test && npm run lint && npm run build",
    "styleguide": "styleguidist build",
    "styleguide:watch": "styleguidist server",
    "cm": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gugutz/bulma-ui.git"
  },
  "keywords": [
    "bulma",
    "react",
    "ui",
    "components"
  ],
  "author": "Gustavo P Borges",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gugutz/bulma-ui/issues"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "homepage": "https://bulma-ui.netlify.com/",
  "dependencies": {
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@mdi/font": "^2.3.54",
    "@webpack-blocks/assets": "^1.0.0",
    "@webpack-blocks/babel": "^1.0.0",
    "@webpack-blocks/webpack": "^1.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bulma": "^0.6.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "font-awesome": "^4.7.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "ionicons": "^4.0.0",
    "jest": "^22.4.3",
    "open-iconic": "^1.1.1",
    "prettier": "^1.11.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-styleguidist": "^7.0.4",
    "react-test-renderer": "^16.3.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^15.13.3",
    "webpack": "^3.11.0",
    "xo": "^0.20.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "semicolon": false,
    "envs": [
      "browser",
      "jest"
    ],
    "extends": "xo-react"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
